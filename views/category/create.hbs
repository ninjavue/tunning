<div class="container pt-5 pb-5">
    <form action="/category/" method="post" class="user" enctype="multipart/form-data">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="row">
            <div class="col-lg-5">
                <div class="form-group">
                    <input type="text" id="name" class="form-control form-control-user" name="name" placeholder="Название категории" required>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="form-group">
                    <input type="text" id="slug" class="form-control form-control-user" name="slug" placeholder="Ссылка" required>
                </div>
            </div>

            <div class="col-lg-2">
                <div class="form-group">
                    <label>
                        <input type="checkbox" checked name="status" value="0">
                        Активный
                    </label>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group upload-photo">
                    <label class="uploadPreview" for="file1">
                        <input type="file" name="img" id="file1" accept="image/*">
                        <span class="img-uploader">
                            <div class="pl">+</div>
                        </span>
                    </label>
                    <span class="remove-image">+</span>
                </div>
            </div>
            
            
        </div>
        <button type="submit" class="btn btn-primary btn-user btn-block">Добавить</button>
    </form>

</div>

<script>
    let nameInput = document.getElementById('name')
    let slugInput = document.getElementById('slug')
    
    nameInput.addEventListener('input',(e)=>{
        let str = nameInput.value
        slugInput.value = str.split(' ').join('-').toLowerCase()
    })
</script>