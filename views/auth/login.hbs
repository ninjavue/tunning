<div class="container">
  <div class="row">
    <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
      <div class="card card-plain mt-8">
        <div class="card-header pb-0 text-left bg-transparent">
          <h3 class="font-weight-bolder text-info text-gradient">Tizimga xush kelibsiz!</h3>
        </div>
        <div class="card-body">
          <form class="user" method="POST" action="/auth/login">
            <div class="form-group">
              <input type="hidden" name="_csrf" value="{{csrf}}">
              <input type="email" class="form-control" autocomplete="off" name="email"
                aria-describedby="emailHelp" placeholder="">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="password" autocomplete="false"
                placeholder="Введите пароль">
            </div>
            <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">
              Kirish
            </button>
          </form>
        </div>    
        
      </div>
    </div>
    <div class="col-md-6">
      <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
        <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6" style="background-image:url('../assets/img/curved-images/curved6.jpg')"></div>
      </div>
    </div>
  </div>
  {{#if error}}
  <div class="row justify-content-center">
    <div class="col-xl-5 col-lg-5 col-md-5">
      <div class="card bg-danger text-white shadow">
          <div class="card-body">{{error}}</div>
      </div>
    </div>
  </div>
  {{/if}}
  {{#if success}}
  <div class="row justify-content-center">
    <div class="col-xl-5 col-lg-5 col-md-5">
      <div class="card bg-success text-white shadow">
          <div class="card-body">{{success}}</div>
      </div>
    </div>
  </div>
  {{/if}}

</div>

