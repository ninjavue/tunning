<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Yangi mahfiy kalit yozing!</h1>
                </div>
                <form class="user" method="POST" action="/auth/password">
                  <div class="form-group">
                    <input type="hidden" name="_csrf" value="{{csrf}}">
                    <input type="hidden" name="_id" value="{{userId}}">
                    <input type="hidden" name="token" value="{{token}}">
                    <input type="password" class="form-control form-control-user" name="password"
                      aria-describedby="emailHelp" placeholder="Yangi mahfiy kalitni yozing...">
                  </div>
                  <button type="submit" class="btn btn-primary btn-user btn-block">
                    Mahfiy kalitni yangilash
                  </button>
                </form>
                <hr>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
  {{#if error}}
  <div class="row justify-content-center">
    <div class="col-xl-5 col-lg-5 col-md-5">
      <div class="card bg-danger text-white shadow">
          <div class="card-body">{{error}}</div>
      </div>
    </div>
  </div>
  {{/if}}
  {{#if success}}
  <div class="row justify-content-center">
    <div class="col-xl-5 col-lg-5 col-md-5">
      <div class="card bg-success text-white shadow">
          <div class="card-body">{{success}}</div>
      </div>
    </div>
  </div>
  {{/if}}

</div>

