<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-center">
                    <h5 class="card-title">{{title}}</h5>
                    <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#newsubcat">Добавить</button>
                </div>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Имя</th>
                        <th scope="col">Номер телефон</th>
                        <th scope="col">Статус</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each call}}
                        <tr>
                            <td><img src="/{{img}}" width="60" alt=""></td>
                            <td>{{name}}</td>
                            <td>{{phone}}</td>
                            <td>
                                <a href="/call/changestatus/{{_id}}">{{{status}}}</a>
                            </td>
                            <td class="text-right">
                                <a href="/call/delete/{{_id}}"
                                onclick="return confirm('Вы уверены?')"
                                class="ml-2 btn btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

